<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control py-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Enviarme instrucciones", class: "btn btn-primary btn-block my-2" %>
  </div>
<% end %>

