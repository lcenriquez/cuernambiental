<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5">
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header">
          <h3 class="text-center font-weight-light my-4">Iniciar sesión</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label "Email o usuario", class: "small mb-1" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control py-4" %>
            </div>

            <div class="form-group">
              <%= f.label "Contraseña", class: "small mb-1" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control py-4" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label "Mantenerme conectado" %>
              </div>
            <% end %>

            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
              <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "small" %>
              <%= f.submit "Ingresar", class: "btn btn-primary" %>
            </div>
          <% end %>

          <% render "devise/shared/links" %>
        </div>
        <div class="card-footer text-center">
          <div class="small">
            <%= link_to "Regístrate", new_registration_path(resource_name) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

          
