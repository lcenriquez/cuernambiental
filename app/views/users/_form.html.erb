<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Nombre" %>
    <%= form.text_field :first_name, class: "form-control py-4" %>
  </div>

  <div class="form-group">
    <%= form.label "Apellido" %>
    <%= form.text_field :last_name, class: "form-control py-4" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control py-4" %>
  </div>

  <div class="form-group">
    <%= form.label "Contraseña" %>
    <em>(mínimo 6 caracteres)</em>
    <%= form.text_field :password, class: "form-control py-4" %>
  </div>

  <% if @permissions && @current_user.permissions == 1 %>
    <div class="form-group">
      <%= form.label :permissions %>
      <%= form.select :permissions, @permissions.map {|c| [c.name, c.id]}, {}, {class: "form-control"} %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
